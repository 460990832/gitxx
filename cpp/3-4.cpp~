#include<iostream>
int main()
{
	using namespace std;
	long long second;
	cout<<"Enter the number of seconds:"
	cin>>second;
	cout<<second<<" seconds = "<<second/(60*60*24)<<" days, "
<<second%(60*60*24)/(60*60)<<" hours, "<<
second%(60*60*24)%(60*60)/60<<" minutes, "<<second%(60*60*24)%(60*60)%60<<" seconds"<<endl;
	return 0;
}
